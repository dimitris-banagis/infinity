<html lang="el">
<head>
  <meta charset="UTF-8">
  <title>ΑΠΕΙΡΟ CLICKER</title>
  <style>
    body {
      background: #000;
      color: #0f0;
      font-family: monospace;
      text-align: center;
      padding-top: 50px;
    }
    button, input {
      margin: 10px;
      padding: 10px 20px;
      background: #111;
      color: #0f0;
      border: 1px solid #0f0;
      font-size: 18px;
    }
  </style>
</head>
<body>

  <h1>∞ AUTOCLICK MULTIPLIER</h1>
  <h2 id="counter">1</h2>

  <button onclick="clickOnce()">CLICK</button>
  <button onclick="doubleNow()">×2</button>
  <button onclick="reset()">RESET</button>
  <br>
  <button onclick="startInfiniteAutoClick()">AUTOCLICK (NO LIMIT)</button>
  <button onclick="stopAutoClick()">STOP</button>

  <script>
    let number = 1n;
    let autoClicking = false;

    function update() {
      document.getElementById('counter').innerText = number.toString();
    }

    function clickOnce() {
      number *= 2n;
      update();
    }

    function doubleNow() {
      number *= 2n;
      update();
    }

    function reset() {
      number = 1n;
      update();
    }

    function startInfiniteAutoClick() {
      autoClicking = true;
      autoClick();
    }

    function autoClick() {
      if (!autoClicking) return;
      number *= 2n;
      update();
      // Χρήση requestIdleCallback για όσο πιο συχνά γίνεται χωρίς να "κολλάει"
      requestIdleCallback(autoClick);
    }

    function stopAutoClick() {
      autoClicking = false;
    }
  </script>

</body>
</html>

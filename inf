<body>

  <div id="number">1</div>

  <button onclick="multiply()">√ó2</button>
  <button onclick="divide()">√∑2</button>
  <button onclick="reset()">Reset</button>
  <button onclick="save()">üíæ Save</button>
  <button onclick="load()">üìÇ Load</button>
  <button onclick="toggleAuto()">‚è± Auto √ó2</button>

  <div id="status">Auto OFF</div>

  <script>
    let current = 1;
    let autoInterval = null;
    const intervalSpeed = 1000; // œÉŒµ milliseconds

    function updateDisplay() {
      document.getElementById("number").innerText = current.toLocaleString('en-US');
    }

    function multiply() {
      current *= 2;
      updateDisplay();
    }

    function divide() {
      current /= 2;
      updateDisplay();
    }

    function reset() {
      current = 1;
      updateDisplay();
    }

    function save() {
      localStorage.setItem("savedValue", current);
      alert("ŒëœÄŒøŒ∏Œ∑Œ∫ŒµœçœÑŒ∑Œ∫Œµ!");
    }

    function load() {
      const saved = localStorage.getItem("savedValue");
      if (saved !== null) {
        current = parseFloat(saved);
        updateDisplay();
        alert("Œ¶ŒøœÅœÑœéŒ∏Œ∑Œ∫Œµ!");
      } else {
        alert("ŒîŒµŒΩ œÖœÄŒ¨œÅœáŒµŒπ Œ±œÄŒøŒ∏Œ∑Œ∫ŒµœÖŒºŒ≠ŒΩŒ∑ œÑŒπŒºŒÆ.");
      }
    }

    function toggleAuto() {
      const status = document.getElementById("status");
      if (autoInterval === null) {
        autoInterval = setInterval(() => {
          multiply();
        }, intervalSpeed);
        status.innerText = `Auto ON: Œ∫Œ¨Œ∏Œµ ${intervalSpeed}ms`;
      } else {
        clearInterval(autoInterval);
        autoInterval = null;
        status.innerText = "Auto OFF";
      }
    }

    window.onload = load;
  </script>


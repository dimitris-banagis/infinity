<body>

  <h1>‚àû AUTO MULTIPLIER CLICKER</h1>
  <div id="numberDisplay">1</div>

  <div class="buttons">
    <button onclick="manualClick()">CLICK</button>
    <button onclick="doubleNow()">x2</button>
    <button onclick="reset()">RESET</button>
    <button onclick="toggleAutoClick()">
      <span id="autoBtnLabel">START AUTO</span>
    </button>
  </div>

  <div class="controls">
    <label for="speedSelect">Speed:</label>
    <select id="speedSelect">
      <option value="100">Ultra Fast √ó100</option>
      <option value="1000">Mega Fast √ó1,000</option>
      <option value="5000">Super Fast √ó5,000</option>
      <option value="10000">Hyper √ó10,000</option>
      <option value="100000">Insane √ó100,000</option>
      <option value="1000000">Overdrive √ó1,000,000</option>
    </select>
  </div>

  <footer>
    Infinite clicker | œáœâœÅŒØœÇ œåœÅŒπŒ± | œÜœÑŒπŒ±Œ≥ŒºŒ≠ŒΩŒø ŒºŒµ BigInt üöÄ
  </footer>

  <script>
    let number = 1n;
    let autoRunning = false;
    let frame;

    const display = document.getElementById("numberDisplay");
    const autoBtnLabel = document.getElementById("autoBtnLabel");
    const speedSelect = document.getElementById("speedSelect");

    function updateDisplay() {
      display.innerText = number.toString();
    }

    function manualClick() {
      number *= 2n;
      updateDisplay();
    }

    function doubleNow() {
      number *= 2n;
      updateDisplay();
    }

    function reset() {
      number = 1n;
      autoRunning = false;
      cancelAnimationFrame(frame);
      autoBtnLabel.textContent = "START AUTO";
      updateDisplay();
    }

    function toggleAutoClick() {
      autoRunning = !autoRunning;
      autoBtnLabel.textContent = autoRunning ? "STOP AUTO" : "START AUTO";
      if (autoRunning) {
        autoClickLoop();
      } else {
        cancelAnimationFrame(frame);
      }
    }

    function autoClickLoop() {
      if (!autoRunning) return;
      const speed = parseInt(speedSelect.value);
      for (let i = 0; i < speed; i++) {
        number *= 2n;
      }
      updateDisplay();
      frame = requestAnimationFrame(autoClickLoop);
    }

    updateDisplay();
  </script>


  <h1>‚àû AUTO POWER CLICKER</h1>
  <div id="display">2^0</div>

  <div>
    <button onclick="clickOnce()">CLICK</button>
    <button onclick="reset()">RESET</button>
    <button onclick="toggleAutoClick()">
      <span id="autoBtnLabel">START AUTO</span>
    </button>
  </div>

  <div>
    <label for="speedSelect">Speed:</label>
    <select id="speedSelect">
      <option value="100">1^2 (√ó100)</option>
      <option value="1000">1^3 (√ó1,000)</option>
      <option value="10000">1^4 (√ó10,000)</option>
      <option value="100000">1^5 (√ó100,000)</option>
      <option value="1000000">1^6 (√ó1,000,000)</option>
    </select>
  </div>

  <footer>
    Œ§Œ±œáœçœÑŒ∑œÑŒ± œâœÇ 1^n & ŒîŒπœÄŒªŒ±œÉŒπŒ±œÉŒºœåœÇ 2^n œáœâœÅŒØœÇ œåœÅŒπŒø üöÄ
  </footer>

  <script>
    let power = 0n;
    let autoRunning = false;
    let frame;

    const display = document.getElementById("display");
    const autoBtnLabel = document.getElementById("autoBtnLabel");
    const speedSelect = document.getElementById("speedSelect");

    function updateDisplay() {
      display.innerText = "2^" + power.toString();
    }

    function clickOnce() {
      power += 1n;
      updateDisplay();
    }

    function reset() {
      power = 0n;
      autoRunning = false;
      cancelAnimationFrame(frame);
      autoBtnLabel.textContent = "START AUTO";
      updateDisplay();
    }

    function toggleAutoClick() {
      autoRunning = !autoRunning;
      autoBtnLabel.textContent = autoRunning ? "STOP AUTO" : "START AUTO";
      if (autoRunning) {
        autoClickLoop();
      } else {
        cancelAnimationFrame(frame);
      }
    }

    function autoClickLoop() {
      if (!autoRunning) return;
      const speed = parseInt(speedSelect.value);
      power += BigInt(speed);
      updateDisplay();
      frame = requestAnimationFrame(autoClickLoop);
    }

    updateDisplay();
  </script>

